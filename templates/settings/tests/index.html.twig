{% extends 'base.html.twig' %}

{% block title %}{{ page_title }} - WebDev Admin{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-vial"></i> Tests Management</h3>
                <div class="card-tools">
                    <a href="{{ path('settings_tests_new') }}" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Add New Test
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table id="tests-table" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Test Key</th>
                            <th>Name</th>
                            <th>Commands</th>
                            <th>Dependencies</th>
                            <th width="15%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for key, test in tests %}
                            <tr>
                                <td><code>{{ key }}</code></td>
                                <td>{{ test.name }}</td>
                                <td>
                                    <span class="badge badge-primary">{{ test.commands is defined ? test.commands|length : 0 }} command(s)</span>
                                    {% if test.commands is defined and test.commands|length > 0 %}
                                        <button type="button" 
                                                class="btn btn-xs btn-info" 
                                                data-toggle="collapse" 
                                                data-target="#commands-{{ key }}">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <div id="commands-{{ key }}" class="collapse mt-2">
                                            <ul class="mb-0">
                                                {% for command in test.commands %}
                                                    <li><code>{{ command }}</code></li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if test.tests is defined and test.tests is defined and test.tests|length > 0 %}
                                        <span class="badge badge-info">{{ test.tests|length }} test(s)</span>
                                    {% else %}
                                        <span class="text-muted">None</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('settings_tests_edit', {key: key}) }}" 
                                           class="btn btn-info" 
                                           title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="{{ path('settings_tests_delete', {key: key}) }}" 
                                              method="post" 
                                              style="display: inline;"
                                              onsubmit="return confirm('Are you sure you want to delete this test?');">
                                            <button type="submit" class="btn btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted">No tests configured</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_javascripts %}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}
