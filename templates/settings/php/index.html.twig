{% extends 'base.html.twig' %}

{% block title %}{{ page_title }} - WebDev Admin{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><i class="fab fa-php"></i> PHP Configuration</h3>
                <div class="card-tools">
                    <a href="{{ path('settings_php_edit') }}" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i> Edit Configuration
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5>General Settings</h5>
                        <table class="table table-bordered">
                            <tr>
                                <th width="40%">PHP Version</th>
                                <td><span class="badge badge-info">{{ config.version ?? 'Not set' }}</span></td>
                            </tr>
                        </table>

                        <h5 class="mt-3">PHP Configuration (php.ini)</h5>
                        <table class="table table-bordered">
                            {% if config.config is defined and config.config|length > 0 %}
                                {% for key, value in config.config %}
                                    <tr>
                                        <th width="40%">{{ key }}</th>
                                        <td><code>{{ value }}</code></td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="2" class="text-center text-muted">No custom PHP configuration set</td>
                                </tr>
                            {% endif %}
                        </table>
                    </div>

                    <div class="col-md-6">
                        <h5>Web Configuration</h5>
                        <table class="table table-bordered">
                            {% if config.configWeb is defined and config.configWeb|length > 0 %}
                                {% for key, value in config.configWeb %}
                                    <tr>
                                        <th width="40%">{{ key }}</th>
                                        <td><code>{{ value }}</code></td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="2" class="text-center text-muted">No custom Web configuration set</td>
                                </tr>
                            {% endif %}
                        </table>

                        <h5 class="mt-3">CLI Configuration</h5>
                        <table class="table table-bordered">
                            {% if config.configCLI is defined and config.configCLI|length > 0 %}
                                {% for key, value in config.configCLI %}
                                    <tr>
                                        <th width="40%">{{ key }}</th>
                                        <td><code>{{ value }}</code></td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="2" class="text-center text-muted">No custom CLI configuration set</td>
                                </tr>
                            {% endif %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
