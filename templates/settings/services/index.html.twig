{% extends 'base.html.twig' %}

{% block title %}{{ page_title }} - WebDev Admin{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-server"></i> Services Management</h3>
                <div class="card-tools">
                    <a href="{{ path('settings_services_new') }}" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Add New Service
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table id="services-table" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Service Key</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Status</th>
                            <th>Port</th>
                            <th>Subdomain</th>
                            <th width="15%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for key, service in services %}
                            <tr>
                                <td><code>{{ key }}</code></td>
                                <td>{{ service.name }}</td>
                                <td>
                                    {% set badge_class = {
                                        'proxy': 'primary',
                                        'database': 'success',
                                        'mail': 'info',
                                        'cache': 'warning',
                                        'tools': 'secondary',
                                        'other': 'dark'
                                    } %}
                                    <span class="badge badge-{{ badge_class[service.category] ?? 'dark' }}">
                                        {{ service.category }}
                                    </span>
                                </td>
                                <td>
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" 
                                               class="custom-control-input service-toggle" 
                                               id="service-{{ key }}" 
                                               data-service="{{ key }}"
                                               {% if service.active is defined and service.active %}checked{% endif %}>
                                        <label class="custom-control-label" for="service-{{ key }}">
                                            {% if service.active is defined and service.active %}
                                                <span class="badge badge-success">Active</span>
                                            {% else %}
                                                <span class="badge badge-secondary">Inactive</span>
                                            {% endif %}
                                        </label>
                                    </div>
                                </td>
                                <td>{{ service.port ?? 'N/A' }}</td>
                                <td>{{ service.subDomain ?? 'N/A' }}</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('settings_services_edit', {key: key}) }}" 
                                           class="btn btn-info" 
                                           title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="{{ path('settings_services_delete', {key: key}) }}" 
                                              method="post" 
                                              style="display: inline;"
                                              onsubmit="return confirm('Are you sure you want to delete this service?');">
                                            <button type="submit" class="btn btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-muted">No services configured</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_javascripts %}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}
