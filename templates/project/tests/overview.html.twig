{% extends 'base.html.twig' %}

{% block title %}{{ page_title }} - WebDev Admin{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="card card-outline card-primary">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-vial"></i> Tests</h3>
                <div class="card-tools">
                    <a href="{{ path('project_tests_new') }}" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Add New Test
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table id="tests-table" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Test Key</th>
                            <th>Name</th>
                            <th>Commands</th>
                            <th>Dependencies</th>
                            <th width="15%">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for key, test in tests %}
                            <tr>
                                <td><code>{{ key }}</code></td>
                                <td>{{ test.name }}</td>
                                <td>
                                    <span class="badge badge-primary">{{ test.commands is defined ? test.commands|length : 0 }} command(s)</span>
                                    {% if test.commands is defined and test.commands|length > 0 %}
                                        <button type="button" 
                                                class="btn btn-xs btn-info" 
                                                data-toggle="collapse" 
                                                data-target="#commands-{{ key }}">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <div id="commands-{{ key }}" class="collapse mt-2">
                                            <ul class="mb-0">
                                                {% for command in test.commands %}
                                                    <li><code>{{ command }}</code></li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if test.tests is defined and test.tests is defined and test.tests|length > 0 %}
                                        <span class="badge badge-info">{{ test.tests|length }} test(s)</span>
                                    {% else %}
                                        <span class="text-muted">None</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="#" class="btn btn-primary command-execute-link" data-project-path="{{ project_path|e('html_attr') }}" data-command="webdev tests {{ key|e('html_attr') }}">
                                            <i class="fas fa-play"></i>
                                        </a>
                                        <a href="{{ path('project_tests_edit', {key: key}) }}" 
                                           class="btn btn-info" 
                                           title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="{{ path('project_tests_delete', {key: key}) }}" 
                                              method="post" 
                                              style="display: inline;"
                                              onsubmit="return confirm('Are you sure you want to delete this test?');">
                                            <button type="submit" class="btn btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                    
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted">No tests configured</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Test Execution Modal -->
<div class="modal fade" id="commandExecutionModal" tabindex="-1" aria-labelledby="commandExecutionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="commandExecutionModalLabel">
                    <i class="fas fa-terminal"></i> <span id="command-execution-title">Executing Command</span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="command-execution-loading" class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="sr-only">Executing test...</span>
                    </div>
                    <p class="mt-2 text-muted">Executing command...</p>
                </div>
                <div id="command-execution-output" class="d-none">
                    <div class="terminal-output" id="command-terminal-output"></div>
                </div>
                <div id="command-execution-error" class="d-none">
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span id="command-execution-error-message"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block extra_javascripts %}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}
